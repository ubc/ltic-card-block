{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "ltic/card-block",
	"version": "0.1.0",
	"title": "Card Block",
	"category": "widgets",
	"description": "A flexible card block that allows different layouts.",
	"supports": {
		"html": false
	},
	"attributes": {
		"variationType": {
			"type": "string",
			"default": "pattern-1"
		},
		"isInQueryLoop": {
			"type": "boolean",
			"default": false
		}
	},
	"styles": [
		{
			"name": "default",
			"label": "Default",
			"isDefault": true
		},
		{
			"name": "style-2",
			"label": "Style 2"
		},
		{
			"name": "style-3",
			"label": "Style 3"
		}
	],
	"usesContext": [ "queryId" ],
	"textdomain": "wp-card-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}